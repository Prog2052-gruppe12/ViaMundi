rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // TEMP for dev: tillat reads+writes til test TestCollection
    match /TestCollection/{doc=**} {
      allow read: if true;
      allow write: if true; // TEMP for local testing
    }
    
    // User profile and trips rules
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Trips subcollection rules
      match /trips/{tripId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    match /{doc=**} {
      allow read, write: if request.auth != null;
    }
  }
}
